                                                                >Uttarakhand</option>
                                                            <option value="HR" <%=data.scity==="HR" ? "selected" : "" %>
                                                                >Haryana</option>
                                                            <option value="DL" <%=data.scity==="DL" ? "selected" : "" %>
                                                                >Delhi</option>
                                                            <option value="RJ" <%=data.scity==="RJ" ? "selected" : "" %>
                                                                >Rajasthan</option>
                                                            <option value="UP" <%=data.scity==="UP" ? "selected" : "" %>
                                                                >Uttar Pradesh</option>
                                                        </optgroup>

                                                        <optgroup label="Western India">
                                                            <option value="GJ" <%=data.scity==="GJ" ? "selected" : "" %>
                                                                >Gujarat</option>
                                                            <option value="MH" <%=data.scity==="MH" ? "selected" : "" %>
                                                                >Maharashtra</option>
                                                            <option value="GA" <%=data.scity==="GA" ? "selected" : "" %>
                                                                >Goa</option>
                                                            <option value="MP" <%=data.scity==="MP" ? "selected" : "" %>
                                                                >Madhya Pradesh</option>
                                                            <option value="CG" <%=data.scity==="CG" ? "selected" : "" %>
                                                                >Chhattisgarh</option>
                                                        </optgroup>

                                                        <optgroup label="Southern India">
                                                            <option value="AP" <%=data.scity==="AP" ? "selected" : "" %>
                                                                >Andhra Pradesh</option>
                                                            <option value="KA" <%=data.scity==="KA" ? "selected" : "" %>
                                                                >Karnataka</option>
                                                            <option value="KL" <%=data.scity==="KL" ? "selected" : "" %>
                                                                >Kerala</option>
                                                            <option value="TN" <%=data.scity==="TN" ? "selected" : "" %>
                                                                >Tamil Nadu</option>
                                                            <option value="TS" <%=data.scity==="TS" ? "selected" : "" %>
                                                                >Telangana</option>
                                                            <option value="PY" <%=data.scity==="PY" ? "selected" : "" %>
                                                                >Puducherry</option>
                                                            <option value="LD" <%=data.scity==="LD" ? "selected" : "" %>
                                                                >Lakshadweep</option>
                                                        </optgroup>

                                                        <optgroup label="Eastern India">
