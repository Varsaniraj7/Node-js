                                                        : "" %>>
                                                    <label class="custom-control-label"
                                                        for="customControlAutosizing2">Vollyball</label>
                                                </div>
                                                <div class="custom-control custom-checkbox mr-sm-2">
                                                    <input type="checkbox" name="hobby" value="football"
                                                        class="custom-control-input" id="customControlAutosizing3"
                                                        <%=data.hobby && data.hobby.includes("football") ? "checked"
                                                        : "" %>>
                                                    <label class="custom-control-label"
                                                        for="customControlAutosizing3">Football</label>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="border-top">
                                            <div class="card-body">
                                                <button type="submit" class="btn btn-primary">Submit</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
