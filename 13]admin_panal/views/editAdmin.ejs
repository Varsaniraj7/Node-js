                                                        required <%=data.gender=="others" ? "checked" : "" %>>
                                                    <label class="custom-control-label"
                                                        for="customControlValidation3">Others</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-sm-3 text-right control-label col-form-label">Select
